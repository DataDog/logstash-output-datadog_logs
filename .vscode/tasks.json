{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "type": "shell",
            "command": ".devcontainer/tasks.sh test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Gem",
            "type": "shell",
            "command": ".devcontainer/tasks.sh build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Gem",
            "type": "shell",
            "command": ".devcontainer/tasks.sh install",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Logstash (Default Config)",
            "type": "shell",
            "command": ".devcontainer/tasks.sh run",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Logstash (Custom Config)",
            "type": "shell",
            "command": ".devcontainer/tasks.sh run ${input:configFile}",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "configFile",
            "type": "promptString",
            "description": "Path to Logstash config file",
            "default": ".devcontainer/test.conf"
        }
    ]
}